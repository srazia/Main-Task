<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlTotView"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/custom_corners"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imgVenuewPic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="@drawable/scrum"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/strip_black_trans">


        <TextView
            android:id="@+id/lblName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left|center"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left|center"
            android:maxLines="1"
            android:padding="5dp"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/lblAddress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left|center"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left|center"
            android:maxLines="1"
            android:padding="5dp"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/llBussTag"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/imgFavuorate"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center|right"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@mipmap/fav" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>


